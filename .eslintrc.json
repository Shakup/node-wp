{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "standard",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "comma-dangle": [
            "error",
            "always-multiline"
        ],
        "no-multi-spaces": [
            "error",
            {
                "exceptions": { "VariableDeclarator": true }
            }
        ]
    }
}